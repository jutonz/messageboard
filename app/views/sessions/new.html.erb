<%= bootstrap_form_for @user, html: { class: 'form-signin' }, url: login_path do |form| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= form.email_field :email, placeholder: 'bob@example.com' %>
  <%= form.password_field :password %>
  <%= form.submit "Sign in", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
<p class="text-center">Or, <%= link_to 'sign up', signup_path %></p>