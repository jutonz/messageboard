<table class="table table-hover">
  <tbody>
  <% @posts.reverse.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= post.formatted_date %></td>
      <td>
        <%= render partial: 'link_to_post_author', locals: { post: post } %>
        <% if post.comments.any? %>
          <span class="small">+ <%= pluralize(post.comments.length, 'comment') %></span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>